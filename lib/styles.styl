/**
 * Apply styles for badges.
 */

.badge
  display inline-block
  min-width 10px
  padding 2px 5px
  font-size 12px
  line-height 1
  color #fff
  text-align center
  white-space nowrap
  vertical-align baseline
  background-color #999
  border-radius 10px
  margin-left 8px
  color white

  &:empty
    display none
